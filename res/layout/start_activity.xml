<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/svNoticArray_start"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_margin="15dp" >

        <ListView
            android:id="@+id/lvNoticContent_start"
            android:layout_width="match_parent"
            android:layout_height="59dp" 
            android:background="#717171">
        </ListView>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="yyyy.mm"
            android:textColor="#343434"
            android:textSize="20pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="21dp"
            android:background="#dbdbdb"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="수강 과목" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lvClass_start"
            android:layout_width="match_parent"
            android:layout_height="145dp" >
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.01"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnStart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7b9b9"
            android:onClick="onClick"
            android:text="결제"
            android:textColor="#343434"
            android:textColorLink="#717171"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7b9b9"
            android:onClick="onClick"
            android:text="♥"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStart3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7b9b9"
            android:onClick="onClick"
            android:text="출석"
            android:textColor="#343434"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.00"
        android:background="#f7b9b9"
        android:gravity="bottom" >

        <Button
            android:id="@+id/btnStart4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7b9b9"
            android:onClick="onClick"
            android:text="성적"
            android:textColor="#343434"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStart5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7b9b9"
            android:onClick="onClick"
            android:text="옵션"
            android:textColor="#343434"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStart6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7b9b9"
            android:onClick="onClick"
            android:text="로그아웃"
            android:textColor="#343434"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
